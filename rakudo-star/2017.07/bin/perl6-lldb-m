#!/bin/sh
/usr/local/Cellar/rakudo-star/2017.07/bin/moar --execname="$0" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/nqp/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime" /usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime/perl6.moarvm -e '
say "=" x 96;

say "This is Rakudo Perl 6 running in the LLVM debugger, which often allows the user to generate useful back-\ntraces to debug or report issues in Rakudo, the MoarVM backend or the currently running code.\n";

unless $*VM.config<ccdebugflags> { say "The currently used MoarVM backend is not compiled with debugging symbols, you might want to\nreconfigure and reinstall MoarVM with --debug enabled.\n" }

say "This Rakudo version is $*PERL.compiler.version() built on MoarVM version $*VM.version(),";
say "running on $*DISTRO.gist() / $*KERNEL.gist()\n";

say "Type `bt full` to generate a backtrace if applicable, type `q` to quit or `help` for help.";

say "-" x 96;'
lldb /usr/local/Cellar/rakudo-star/2017.07/bin/moar -- --execname="$0" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/nqp/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime" /usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime/perl6.moarvm "$@"
