#!/bin/sh
/usr/local/Cellar/rakudo-star/2017.07/bin/moar --execname="$0" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/nqp/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime" /usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime/perl6.moarvm -e '
say "=" x 96;

say "This is Rakudo Perl 6 running in valgrind, a tool for debugging and profiling programs.\nRunning a program in valgrind usually takes *a lot* more time than running it directly,\nso please be patient.";

say "This Rakudo version is $*PERL.compiler.version() built on MoarVM version $*VM.version(),";
say "running on $*DISTRO.gist() / $*KERNEL.gist()";

say "-" x 96;'
valgrind /usr/local/Cellar/rakudo-star/2017.07/bin/moar --full-cleanup --execname="$0" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/nqp/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/lib" --libpath="/usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime" /usr/local/Cellar/rakudo-star/2017.07/share/perl6/runtime/perl6.moarvm "$@"
